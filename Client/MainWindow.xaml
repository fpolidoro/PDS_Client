<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:Client="clr-namespace:Client" x:Name="mainWindow" x:Class="Client.MainWindow"
        mc:Ignorable="d"
        Closing="OnClose"
        Title="Client" Height ="610" Width="830"
        WindowStartupLocation="CenterScreen"
        MinWidth="810" MinHeight="610" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        SizeChanged="mainWindow_SizeChanged"
        >
    <DockPanel x:Name="stackp_base" Margin="0" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
        <TabControl x:Name="tabControl" DockPanel.Dock="Top" Margin="0,2,0,0" MaxHeight="140" SelectedIndex="1" BorderThickness="1,1,1,0">
            <TabItem x:Name="tabItem_File" Background="#FF80397B" BorderBrush="#FF80397B" Padding="0" Margin="0" Height="20">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="TextElement.Foreground"
                        Value="White" />
                        <Setter Property="TextElement.FontSize"
                        Value="16" />
                        <Setter Property="Background"
                        Value="#363636" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter ContentSource="Header"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected"
                                         Value="true">
                                            <Setter Property="TextElement.Foreground"
                                            Value="Black" />
                                            <Setter Property="Background"
                                            Value="White" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabItem.Resources>
                    <TabItem.Header>
                    <Menu Background="#FF80397B" BorderBrush="#FF80397B" >
                        <MenuItem Header="FILE" Foreground="White">
                            <MenuItem Header="Quit" Foreground="Black"/>
                        </MenuItem>
                    </Menu>
                </TabItem.Header>
            </TabItem>
            <TabItem x:Name="tabItem_Home" Header="HOME"  Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Margin="4,-2,-6,0">
                <WrapPanel Margin="4,2" MaxHeight="110" VerticalAlignment="Top"  Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" >
                    <DockPanel>
                        <ToolBarPanel Height="84" VerticalAlignment="Top" Orientation="Horizontal" DockPanel.Dock="Top">
                            <Button x:Name="btn_newConnection" Width="80" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="84" BorderThickness="0" Click="btn_newConnection_Click">
                                <StackPanel>
                                    <Image x:Name="img_newConnection" Height="46" Width="46" Source="imgs/newConnection.png" Stretch="None"/>
                                    <TextBlock x:Name="txtB_newConnection" Text="Nuova connessione" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="btn_disconnectAll" Width="80" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="84" BorderThickness="0" DockPanel.Dock="Right" Click="btn_disconnectAll_Click">
                                <StackPanel>
                                    <Image x:Name="img_disconnectAll" Height="46" Width="46" Source="imgs/disconnectAll.png" Stretch="None"/>
                                    <TextBlock x:Name="txtB_disconnectAll" Text="Disconnetti tutti" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </ToolBarPanel>
                        <Label Content="Connessioni" DockPanel.Dock="Bottom" HorizontalContentAlignment="Center" Panel.ZIndex="1" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                    </DockPanel>
                    <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1,0">
                        <DockPanel>
                            <ToolBarPanel DockPanel.Dock="Top" >
                                <Button x:Name="btn_sendKeyCombo" Width="100" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="84" BorderThickness="0" Click="btn_sendKeyCombo_Click">
                                    <StackPanel>
                                        <Image x:Name="img_sendKeyCombo" Height="46" Width="46" Source="imgs/sendKeyCombo.png" Stretch="None"/>
                                        <TextBlock x:Name="txtB_sendKeyCombo" Text="Invia combo di tasti a più server" TextWrapping="Wrap" TextAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </ToolBarPanel>
                            <Label DockPanel.Dock="Bottom" Content="Combinazioni" HorizontalContentAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                        </DockPanel>
                    </Border>
                    <DockPanel>
                        <ToolBarPanel>
                            <Button x:Name="btn_help" Width="60" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="84" BorderThickness="0">
                                <StackPanel>
                                    <Image x:Name="img_help" Height="46" Width="46" Source="imgs/help.png"/>
                                    <TextBlock x:Name="txtB_help" Text="Aiuto" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </ToolBarPanel>
                    </DockPanel>
                </WrapPanel>
            </TabItem>
            <TabItem x:Name="tabItem_KeyCombos" Background="#FFF6F1FC" BorderBrush="#FFF6F1FC" Margin="6,-2,-6,0" Header="TASTI">
                <Grid MaxHeight="112" MinHeight="112">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Width="224">
                        <local:ListBoxWithButtons x:Name="listBoxWButtons_activeProcesses"   DockPanel.Dock="Top" Margin="0,4,0,0"/>
                        <WrapPanel Margin="0,4,0,0" HorizontalAlignment="Center" >
                            <local:CatchKeyTextBox x:Name="cktxt_getKeyCombo" DockPanel.Dock="Top" VerticalAlignment="Center" />
                            <Button x:Name="btn_clean" Padding="0" Height="22" Width="22" BorderThickness="0" Background="{x:Null}" Click="btn_clean_Click" >
                                <Image x:Name="img_clearCombo" Height="16" Width="16" Source="imgs/clear_16x16.png"/>
                            </Button>
                        </WrapPanel>
                        <TextBlock TextWrapping="Wrap" Text="Selezione processo" HorizontalAlignment="Center" DockPanel.Dock="Bottom" VerticalAlignment="Bottom"  Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Height="22"/>
                    </StackPanel>
                    <Border Grid.Column="1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1,0,1,0" Margin="4,0,4,0" Padding="3,0,3,0">
                        <StackPanel>
                            <WrapPanel Height="94">
                            <Button x:Name="btn_sendKey" Width="80" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Height="84" BorderThickness="0" Click="btn_sendKey_Click" Grid.Column="2" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Center">
                                <StackPanel>
                                    <Image x:Name="img_sendKey" Height="46" Width="46" Source="imgs/sendSpecialCombo_48x48.png"/>
                                    <TextBlock x:Name="txtB_sendKey" Text="Combinazione speciale" TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <StackPanel Grid.Column ="1" Margin="4,0">
                                    <Button x:Name="btn_sendALTF4" Background="{x:Null}"  BorderThickness="0" HorizontalAlignment="Left" Margin="0,6,0,0" Click="btn_sendALTF4_Click">
                                    <WrapPanel>
                                        <Image Height="16" Width="16" Source="imgs/close16x16.png"/>
                                        <TextBlock Text="Chiudi processo" Margin="4,0,0,0"/>
                                    </WrapPanel>
                                </Button>
                                    <Button x:Name="btn_sendAltTab" Background="{x:Null}"  BorderThickness="0" HorizontalAlignment="Left" Margin="0,4,0,0" Click="btn_sendAltTab_Click">
                                    <WrapPanel>
                                        <Image Height="16" Width="16" Source="imgs/altTab_16x16.png"/>
                                        <TextBlock Text="Invia ALT+Tab" Margin="4,0,0,0"/>
                                    </WrapPanel>
                                </Button>
                                    <Button x:Name="btn_sendAltTabRight" Background="{x:Null}"  BorderThickness="0" HorizontalAlignment="Left" Margin="0,4,0,0" Click="btn_sendAltTabRight_Click">
                                    <WrapPanel>
                                        <Image Height="16" Width="16" Source="imgs/tabRight_16x16.png"/>
                                        <TextBlock Text="Passa a finestra a destra" Margin="4,0,0,0"/>
                                    </WrapPanel>
                                </Button>
                                <Button x:Name="btn_sendAltTabLeft" Background="{x:Null}"  BorderThickness="0" HorizontalAlignment="Left" Margin="0,4,0,0" Click="btn_sendAltTabLeft_Click" >
                                    <WrapPanel>
                                        <Image Height="16" Width="16" Source="imgs/tabLeft_16x16.png"/>
                                        <TextBlock Text="Passa a finestra a sinistra" Margin="4,0,0,0"/>
                                    </WrapPanel>
                                </Button>
                            </StackPanel>
                        </WrapPanel>
                            <TextBlock Text="Combinazioni speciali" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" Height="22"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" BorderThickness="1" Padding="0" Margin="0" DockPanel.Dock="Bottom">
            <ScrollViewer x:Name="stackp_serverGrid" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Margin="0">
                <ItemsControl x:Name="ic_serverElements">
                    <!-- ItemsPanelTemplate -->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid x:Name="uniGrid_servers" 
								Columns="{Binding Cols}"
								Rows="{Binding Cols}"
								VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!-- ItemTemplate -->
                    <!--<ItemsControl.ItemTemplate>
                        <DataTemplate>-->
                            <!--<local:ServerElement BorderBrush="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderThickness="1"/>-->
                        <!--</DataTemplate>
                    </ItemsControl.ItemTemplate>-->
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <!--<StatusBar x:Name="statusBar" Height="24" Margin="0,0,0,0" MinHeight="24" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Label x:Name="lbl_status" Content="status" Padding="5,0" Height="18"/>
        </StatusBar>-->
    </DockPanel>
</Window>
