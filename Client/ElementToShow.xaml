<UserControl x:Class="Client.ElementToShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="202">
    <WrapPanel VerticalAlignment="Center">
        <Image x:Name="img_element" Width="16" Height="16" Margin="4,0"/>
        <TextBlock x:Name="txtB_element" Margin="0,0,4,0" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left"/>
    </WrapPanel>
</UserControl>
