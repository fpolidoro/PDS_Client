<UserControl x:Class="Client.OpenWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d"
             d:MinWidth="180"
             >
    <Grid Height="26" Width="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="45" />
            <ColumnDefinition Width="0.15*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="img_OpenWindowIcon" Width="26" Height="26" Grid.Column="0" HorizontalAlignment="Left" Margin="2,0" />
        <TextBlock x:Name="txtb_ProcessName" Grid.Column="1" TextTrimming="WordEllipsis" VerticalAlignment="Center" Margin="2,0"/>
        <TextBlock x:Name="txtb_ProcessTimeFocused" Text="" Grid.Column="2" Margin="2,0" VerticalAlignment="Center" HorizontalAlignment="Right" />
    </Grid>
</UserControl>
